{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++ build active file with msys64 mingw64",
			"command": "g++",
			"args": [
				"-g",
				"--std=c++17",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}",
			],
			"presentation": {
                "reveal": "always",
                "panel": "shared"
            },
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}